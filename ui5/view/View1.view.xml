<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="kanban5.controller.View1">
	<App>
		<pages>
			<Page title="{i18n>LeanManagement}">
				<content>
					<sap.ui.layout:Grid xmlns:sap.ui.layout="sap.ui.layout" id="__grid0" defaultSpan="XL3 L3 M12 S12">
					    <sap.ui.layout:content xmlns:sap.ui.layout="sap.ui.layout">
					        <List xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" noDataText="Drop list items here" id="__listNew" items="{path: '/Tasks', filters: [{path:'Status', operator:'EQ', value1:'New'}, {path:'IsAssigned', operator:'EQ', value1:false}], sorter: { path: 'Priority', descending: false}}"> 
					            <items>
					                <NotificationListItem id="__item0_copy3" 
					                                    type="Detail" 
					                                   datetime="{path:'DueDate', 
					                                              type:'sap.ui.model.odata.type.DateTime',
					                                              formatOptions: {style:'short', pattern:'dd MMM YY', relative:true, relativeScale:'day', relativeStyle:'narrow'}}"
					                                   priority="{parts: ['DueDate'],formatter: '.formatPrio'}"
					                					title="{Name}" 
					                					description="{Description}" 
					                                      showButtons="true" 
					                                      detailPress="onDetailPress"
					                                      showCloseButton="true" 
					                                      close="onItemDelete">
					                	<buttons>
					                		<Button icon="sap-icon://person-placeholder" press="onAssign"/>
					                		<Button icon="sap-icon://media-play" press="onMoveToInWork"/>
					                	</buttons>
					                </NotificationListItem>
					                
					            </items>
					            <headerToolbar>
					                <Toolbar width="100%" id="__toolbar0">
					                    <content>
					                        <Button id="__button0" icon="sap-icon://add" press="onAddItem"/>
					                        <ToolbarSpacer/>
					                        <Text text="{i18n>New}" maxLines="0" id="__text6"/>
					                        <ToolbarSpacer/>
					                        </content>
					                </Toolbar>
					            </headerToolbar>
					        </List>
					        <List xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" noDataText="Drop list items here" id="__listAssigned" items="{path: '/Tasks', filters: [{path:'IsAssigned', operator:'EQ', value1:true}], sorter: { path: 'Priority', descending: false}}" itemPress="" delete="onTaskCompleted" mode="Delete">
					            <items>
					                <NotificationListItem id="__item0_copy4a" 
					                					  type="DetailAndActive" 
					                                   priority="{parts: ['DueDate'],formatter: '.formatPrio'}"
					                					  title="{Name}" 
					                					  description="{Description}"
					                					  truncate="true"
					                                   authorName="{Assignee}"
					                                   datetime="{path:'DueDate', 
					                                              type:'sap.ui.model.odata.type.DateTime',
					                                              formatOptions: {style:'short', pattern:'dd MMM YY', relative:true, relativeScale:'day', relativeStyle:'narrow'}}"
					                                   
					                					  showCloseButton="true"
					                					  showButtons="true">
					                	<buttons>
					                		<Button icon="sap-icon://person-placeholder" press="onAssign"/>
					                	</buttons>

					                </NotificationListItem>
					                
					            </items>
					            <headerToolbar>
					                <Toolbar width="100%" id="__toolbar0_copy1">
					                    <content>
					                        <ToolbarSpacer id="__spacer0_copy1"/>
					                        <Text text="{i18n>Assigned}" maxLines="0" id="__text6_copy1"/>
					                        <ToolbarSpacer id="__spacer1_copy1"/>
					                    </content>
					                </Toolbar>
					                
					            </headerToolbar>
					        </List>
					        <List xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" noDataText="Drop list items here" id="__listInWork" items="{path: '/Tasks', filters: [{path:'Status', operator:'EQ', value1:'InWork'}, {path:'IsAssigned', operator:'EQ', value1:false}], sorter: { path: 'Priority', descending: false}}" itemPress="" delete="onTaskCompleted" mode="Delete">
					            <items>
					                <NotificationListItem id="__item0_copy4" type="DetailAndActive" 
					                                   priority="{parts: ['DueDate'],formatter: '.formatPrio'}"
					                					title="{Name}" 
					                					description="{Description}" 
					                                   datetime="{path:'DueDate', 
					                                              type:'sap.ui.model.odata.type.DateTime',
					                                              formatOptions: {style:'short', pattern:'dd MMM YY', relative:true, relativeScale:'day', relativeStyle:'narrow'}}"
					                					  showCloseButton="false">
					                	<buttons>
					                		<Button icon="sap-icon://media-reverse" press="onMoveToNew"/>
					                		<Button icon="sap-icon://media-play" press="onMoveToCompleted"/>
					                	</buttons>
					                </NotificationListItem>
					                
					            </items>
					            <headerToolbar>
					                <Toolbar width="100%" id="__toolbar0_copy">
					                    <content>
					                        <ToolbarSpacer id="__spacer0_copy"/>
					                        <Text text="{i18n>InWork}" maxLines="0" id="__text6_copy"/>
					                        <ToolbarSpacer id="__spacer1_copy"/>
					                    </content>
					                </Toolbar>
					                
					            </headerToolbar>
					        </List>
					        <List xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" noDataText="Drop list items here" id="__listCompleted" items="{path: '/Tasks', filters: [{path:'Status', operator:'EQ', value1:'Completed'}], sorter: { path: 'Priority', descending: false}}">
					            <items>
					                <NotificationListItem id="__item0_copy5" type="Navigation" 
					                					counter="0" 
					                					title="{Name}" 
					                					description="Description tex{Description}" 
					                                   priority="None"
					                					icon="sap-icon://picture" 
					                                      showCloseButton="true"
					                                      close="onItemDelete">
					                	<buttons>
					                		<Button icon="sap-icon://media-reverse" press="onMoveToInWork"/>
					                	</buttons>
					                </NotificationListItem>
					                
					            </items>
					            <headerToolbar>
					                <Toolbar width="100%" id="__toolbar0_copy2">
					                    <content>
					                        <ToolbarSpacer id="__spacer0_copy2"/>
					                        <Text text="{i18n>Completed}" maxLines="0" id="__text6_copy2"/>
					                        <ToolbarSpacer id="__spacer1_copy2"/>
					                        </content>
					                    
					                </Toolbar>
					                
					            </headerToolbar>
					        </List>
					    </sap.ui.layout:content>
					</sap.ui.layout:Grid>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>